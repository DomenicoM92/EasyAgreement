<script>
    $(document).ready(function(){
        $.post('/getConnectedUser', function(user){
            var role;
            if(user.type === 'student') role = 'Studente';
            if(user.type === 'academicTutor') role = 'Tutor Accademico';
            if(user.type === 'externalTutor') role = 'Tutor Esterno';
            if(user.type === 'admin') {
                role = 'Amministratore';
                document.getElementById('profile').href = "";
                document.getElementById('profile').style.cursor = "default";
            }
            document.getElementById('nome').innerHTML += user.utente.Name+'<span class="user-level">'+role+'</span>';
        })
    })
</script>
