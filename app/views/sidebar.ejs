<script>
    $(document).ready(function(){
        $.post('/getConnectedUser', function(user){
            if(user.type == 'student'){
                document.getElementById('nome').innerHTML = user.utente.Email;
                document.getElementById('type').innerHTML = "Studente";
            }
            else if(user.type == 'academicTutor'){
                document.getElementById('nome').innerHTML = user.utente.E_mail;
                document.getElementById('type').innerHTML = "Tutor Accademico";
            }
            else if(user.type == 'externalTutor'){
                document.getElementById('nome').innerHTML = user.utente.E_mail;
                document.getElementById('type').innerHTML = "Tutor Esterno";
            }
            else if(user.type == 'admin'){
                document.getElementById('nome').innerHTML = user.utente.email;
                document.getElementById('type').innerHTML = "Amministratore";
            }
        })
    })
</script>